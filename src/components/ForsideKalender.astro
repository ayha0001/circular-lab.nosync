---
import "../css/generel2.css";
import Layout from "../layouts/Layout.astro";
import EventCardForside from "../components/EventCardForside.astro";
---

<Layout>
  <section>
    <div class="events">
      <h3>Events i Circular Lab</h3>
      <h5>
        Følg med her i kalenderen og hold dig opdateret på, hvad der sker i
        Circular Lab. Vejledninger, foredrag, events og lignende vil løbende
        blive lagt ind i kalenderen.
      </h5>
      <div class="grid_1-1-1">
        <EventCardForside />
      </div>
      <a href="/overview">➜ Se hele kalenderen her </a>
    </div>
  </section>
</Layout>

<style>
  section {
    background-color: var(--secondarybackground);
    padding: 1rem;
    display: flex;
    flex-direction: column;
  }

  .events {
    display: grid;
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
  }

  .grid_1-1-1 {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-bottom: 4rem;
    margin-left: 0rem;
  }
  h5 {
    font-family: "robotobold_condensed";
    font-size: 1rem;
    font-weight: 400;
    font-style: normal;
    max-width: 75ch;
    line-height: 1.9rem;
    color: var(--primarytext);
  }

  h1 {
    margin-top: 2rem;
  }

  a {
    font-family: "robotobold_condensed";
    text-decoration: none;
    font-size: 18px;
    color: var(--primarytext);
  }

  a:hover {
    color: var(--logocolor);
  }
  @media (min-width: 670px) {
    .grid_1-1-1 {
      margin: 0 auto;
      justify-content: center;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      margin-left: 4rem;
    }
  }
  @media (min-width: 950px) {
    .grid_1-1-1 {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      margin-left: 0rem;
      margin-bottom: 0;
    }

    h5 {
      font-family: "robotobold_condensed";
      font-size: 1.2rem;
      font-weight: 400;
      font-style: normal;
      max-width: 75ch;
      line-height: 1.9rem;
      color: var(--primarytext);
    }

    h1 {
      margin-top: 2rem;
    }
    section {
      padding: 7rem 0rem;
    }
  }
</style>
